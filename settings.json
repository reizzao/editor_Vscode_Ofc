{
  "workbench.colorCustomizations": {
    "activityBar.inactiveForeground": "#c2c2c2",
    "activityBar.foreground": "#c2c2c2",
    "titleBar.inactiveForeground": "#c2c2c2",
    "titleBar.activeForeground": "#c2c2c2",
    "statusBar.foreground": "#FFFFFF",
    "tab.activeBackground": "#250069",
    "activityBar.activeBackground": "#0f4c8a",
    "titleBar.inactiveBackground": "#007fff99",
    "activityBar.background": "#2b1e49",
    "activityBarBadge.background": "#bf0060",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#3399ff",
    "statusBar.background": "#9900cc",
    "statusBar.noFolderBackground": "#9900cc",
    "statusBar.debuggingBackground": "#9900cc",
    "statusBar.debuggingForeground": "#FFFFFF"
  },
  "editor.lineHeight": 24,
  "editor.wordWrapColumn": 120, // tamanho maximo das colunas
  "editor.tabSize": 2, // TAB IDENTACAO PADRAO.
  "zenMode.silentNotifications": false,
  "editor.wordWrap": "on",
  "editor.matchBrackets": "never",
  "git.autofetch": true,

  // EDITOR
  "explorer.compactFolders": true, // compacta visualiazacao dos folders na sidebar.
  "window.newWindowDimensions": "maximized",
  "editor.fontSize": 16,
  "editor.fontFamily": "'Operator Mono Lig Book', 'SF Mono', Consolas, 'Source Code Pro', 'Dank Mono', 'Fira Code', Menlo, 'Inconsolata', 'Droid Sans Mono', 'DejaVu Sans Mono', 'Ubuntu Mono', 'Courier New', Courier, Monaco, monospace",
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true, // espaço a direita removido
  "editor.trimAutoWhitespace": true, // relacioando espaço
  "editor.snippetSuggestions": "top", // prioridade em meus snippets

  // POSICIONAMENTOS
  "workbench.sideBar.location": "right", // LADO DO PAINEL LATERAL SIDEBAR
  "workbench.panel.defaultLocation": "bottom", // define posicao do terminal

  // -- auto_complete
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
},
  "terminal.integrated.fontSize": 14,
  // Workbench
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "single", // config abrir somente uma aba de trabalho
  "workbench.list.smoothScrolling": true,

  // CONFIG ARQUIVOS JSON
  "files.associations": {
    "*.json": "jsonc" // habilita comentarios em arquivos json.
},

  // Git
  "git.enableSmartCommit": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "git.confirmSync": false,
  // Debug
  "debug.console.fontSize": 18,
  "[python]": {
    "editor.formatOnType": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },
  // Code runner
  "code-runner.showExecutionMessage": false,
  "code-runner.clearPreviousOutput": true,
  "code-runner.ignoreSelection": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.runInTerminal": true,
  "code-runner.preserveFocus": false,
  "code-runner.executorMap": {
    "go": "cd $dir && go run .",
    "dart": "dart",
    "python": "python3 -u",
    "code-runner.clearPreviousOutput": false,
    "typescript": "clear && deno run",
    "kotlin": "cd $workspaceRoot || $dir && kotlinc $fileName -include-runtime -d dist/debugs/$fileNameWithoutExt.jar && java -jar dist/debugs/$fileNameWithoutExt.jar"
  },
  "code-runner.executorMapByGlob": {
    "$dir/*.go": "go"
  },
  // LINGUAGENS:
  // javascript config linguage
  "[javascript]": {
    "editor.defaultFormatter": "denoland.vscode-deno",
    "editor.formatOnSave": true
  },
  "javascript.preferences.quoteStyle": "single",
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "javascript.suggest.autoImports": true,

  // TYPESCRIPT config linguage PARA TODOS TS : [ TS_ISOLADOS, DENO, ]
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features", // CONTROLA FORMATACAO DOS TS
    "editor.formatOnSave": true
  },
  "typescript.tsdk": "/home/rzj/.nvm/versions/node/v19.1.0/lib/node_modules/typescript/lib",
  // MOSTRAR AO VSC O TS GLOBAL PARA O DENO
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,

  "[typescriptreact]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  // linter golang
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "workspace",
  "go.lintFlags": [
      "-E", "dogsled",
      "-E", "gochecknoglobals"
  ],
  "go.useLanguageServer": true,
  "gopls": {
    "ui.semanticTokens": true // autocomplete Go by gopls
  },
  "go.toolsManagement.autoUpdate": true,

  // * PLATAFORMAS_RUNTIMES *
  // -- DENO : DEFINICOES ::  obs usa as configs do escopo typescript --
  "deno.enable": true, // deixar true :: mostra metatags, e é vital nas sugestoes de auto_importacao , deixar true - atrapalha o prettier mas é só colocar um arquivo prettierrc em cada projeto que da certo.
  "deno.lint": true,
  "deno.unstable": true,
  // obs: formatador padrao para deno esta no escopo [typescript]

  // XML Language Support by Red Hat
  "redhat.telemetry.enabled": true,
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "git.ignoreRebaseWarning": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "dart.openDevTools": "flutter",
  "[jsonc]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  },
  "workbench.colorTheme": "OM Theme (Default Dracula Italic)",
  "boot-java.rewrite.reconcile": true,
  "git.openRepositoryInParentFolders": "always",
  "java.debug.settings.console": "internalConsole",
  "java.debug.settings.forceBuildBeforeLaunch": false,
  "prisma.showPrismaDataPlatformNotification": false,
  "editor.minimap.enabled": false

}
